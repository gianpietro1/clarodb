<div class="row login">

  <div class="col-md-6 logo">
    Sistema Ágil de Gestión y Provisionamiento
  </div>
  <div class="col-md-6">
    <h3>Ingresar</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label 'Correo Electrónico' %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Ingresar correo" %>
    </div>
    <div class="form-group">
      <%= f.label 'Contraseña' %>
      <%= f.password_field :password, class: 'form-control', placeholder: "Ingresar contraseña" %>
    </div>
    <div class="form-group">
      <% if devise_mapping.rememberable? %>
      <%= f.label 'Recordarme', class: 'checkbox margin-left-13' do %>
        <%= f.check_box :remember_me %> Recordarme
        <% end %>
      <% end %>
      <%= f.submit "Ingresar", class: 'btn btn-success' %>
    </div>
    <div class="form-group">
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>

</div>